<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-danger message">
        <% errors.forEach(erro => { %>
          <%= erro %><br>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>

<% if (success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-success message">
        <% success.forEach(success => { %>
          <%= success %><br>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Verifica se hรก mensagens
    const messages = document.querySelectorAll('.message');
    messages.forEach(function(message) {
      setTimeout(function() {
        // Adiciona a classe 'hide' para esconder a mensagem
        message.classList.add('hide');
      }, 1500); 
    });
  });
</script>
